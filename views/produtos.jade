extends layout

block content
  h1 Lista de Produtos

  if error
    p(style="color: red") #{error}

  if produtos.length
    table
      thead
        tr
          th Nome
          th Descrição
          th Preço
      tbody
        each produto in produtos
          tr
            td #{produto.nome}
            td #{produto.descricao}
            td R$ #{produto.preco}
  else
    p Nenhum produto cadastrado.